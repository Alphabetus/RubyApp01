<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row justify-content-center">

  <div class="field col-12">
    <%= form.label :name, class: "w-100" %><br>
    <%= form.text_field :name, class: "w-100" %>
  </div>

  <div class="field col-12">
    <%= form.label :description, class: "w-100" %><br>
    <%= form.text_area :description, class: "w-100" %>
  </div>

  <div class="field col-12">
    <%= form.label :image, class: "w-100" %><br>
    <%= form.file_field :image, class: "w-100" %>
  </div>

  <div class="field col-12">
    <%= form.label :colour, class: "w-100" %><br>
    <%= form.text_field :colour, class: "w-100" %>
  </div>

  <div class="field col-12">
    <%= form.label :price, class: "w-100" %><br>
    <%= form.text_field :price, class: "w-100" %>
  </div>

  <div class="actions col-12 pt-2">
    <%= form.submit "Save Product", class: "btn btn-success"%>
  </div>
  <br><br>
</div>


<% end %>
