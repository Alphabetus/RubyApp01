<p id="notice"><%= notice %></p>

<h1 class="px-5">User list</h1>


<div class="row m-0 p-0">
  <div class="col-12 m-0 p-0 px-5">
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user, class: "btn btn-sm btn-info" %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-warning" %></td>
            <td><%= link_to 'Destroy', user, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New User', new_user_path, class: "btn btn-sm btn-success my-5" %>
  </div>
</div>


<br>
