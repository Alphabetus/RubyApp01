<div class="row m-0 p-0 justify-content-center">

  <div class="col-12 m-0 p-0 px-1 px-md-3 px-lg-5 pt-2">

    <%= form_with(model: user, local: true) do |f| %>
      <% if user.errors.any? %>
        <div class="row m-0 p-0">
          <div id="error_explanation col-12">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :street_name %>
        <%= f.text_field :street_name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :house_number %>
        <%= f.text_field :house_number, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, class: "form-control"%>
      </div>

      <%= f.submit "edit user", class: "btn btn-sm btn-success" %>

    <% end %>

  </div>

</div>
