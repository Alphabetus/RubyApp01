// render will paginate partial
$(".comments-paginate").html("<%= escape_javascript render('products/paginate_comments') %>")
// render comments
$("#comments-container").html("<%= escape_javascript render(@comments) %>")
// bind raty
$('.rated').raty({
  starHalf: '<%= asset_path 'star-half.png' %>',
  starOff: '<%= asset_path 'star-off.png' %>',
  starOn: '<%= asset_path 'star-on.png' %>',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
