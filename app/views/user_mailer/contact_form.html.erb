<table style="background-color: #caced1; width: 100%; height:100%;">
  <tbody>

    <tr>
      <td>
        <p>
          <h2>You received a new contact message from <%= @name %>.</h2>
        </p>
      </td>
    </tr>

    <tr>
      <td>
        <p style="font-style: italic;">
          <strong>Date: </strong><%= @date %>
        </p>

        <p>
          <strong>Reply to: </strong><%= @email %>
        </p>

        <p>
          <strong>Message:</strong>
        </p>

        <p style="font-style: italic;">
          "<%= @message %>"
        </p>
      </td>
    </tr>

  </tbody>
</table>
